#!/bin/sh
. /tmp/loader

exit

# 1. generate
# 2. send mail

_mail include		# fixme! workaround for args >6 (loader)

FROM_NAME="$( nvram get ff_adm_name )"		# use mydesign.ipk -> rules_meta_$DEFAULT_LANG.txt
FROM_MAIL="$( nvram get ff_adm_mail )"
DEST_NAME=""
DEST_MAIL=""

FILE_MAIL="/www/mail.txt"
OBJECT_NAME="Haus xy (Stadt)"

LINK="http://$( nvram get ff_dyndns_url )/cgi-bin/tickets?t=12"

_mail_send "$FROM_NAME" "$FROM_MAIL" "$DEST_NAME" "$DEST_MAIL" "$FILE_MAIL" "$OBJECT_NAME" "$LINK"

