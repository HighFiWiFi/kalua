#!/bin/sh

FUNC_VARS_OLD=1

fkt_normalize_digit ()							# SENS: normalize a GPS to an integer without comma and hardstreched/shrinked to 7 numbers
{
	local IN="$1"
	local WITHOUT_COMMA="$( echo $IN | sed 's/\.//' )"		# drop one comma

	printf 2>/dev/null
	[ $? -eq 127 ] && {						# printf is not installed
		echo -n "$WITHOUT_COMMA"
		return
	}

	local SHORTENED="$( printf 2>/dev/null "%0.7s" $WITHOUT_COMMA )"	# shorten to max 7 chars
	
	printf 2>/dev/null "%0.7i" $SHORTENED |				# pad integer with leading zeros, take these zeros and copy to end
	 sed -n 's/^\(0*\)\(.*\)/\2\1/p'				# 5378 -> 0005378 -> 5378000
}

fkt_get_city_by_gps ()
{
	local FUNC="get_city_by_gps"
	local CITY="default"
	
	fkt_get_gps_position

	if [ -z "$GPSX" ] || [ -z "$GPSY" ]; then
		echo "$CITY"
		return
	fi

	local Y="$( fkt_normalize_digit $GPSX )"
	local X="$( fkt_normalize_digit $GPSY )"

	func_log $FUNC daemon debug "normalized Y:'$Y' X:'$X'"
	
	# erster wert:  - je weiter noerdlich, umso groesser - suedlicher gleich kleiner
	# zweiter wert: - je weiter oestlich, umso groesser - westlicher gleich kleiner
	# these values cover the topleft and bottomright corners of an virtual rectangle about the city
	# order is: low,high,low,high (always 7 digits)
	
	  if [ $X -gt 1123283 ] && [ $X -lt 1140106 ] && [ $Y -gt 5093203 ] && [ $Y -lt 5102671 ]; then CITY="weimar"		# ettersburg,mellingen
	elif [ $X -gt 1066909 ] && [ $X -lt 1083732 ] && [ $Y -gt 5111860 ] && [ $Y -lt 5117417 ]; then CITY="sundhausen"	# kleinweisbach,herbsleben
	fi

	echo "$CITY"
}

fkt_get_gps_position ()
{
	local FUNC="get_gps_position"
	
	func_log $FUNC daemon debug "coords now: GPSX:'$GPSX' GPSY:'$GPSY'"

	if [ -n "$GPSX" ] && [ -n "$GPSY" ]; then			# during /www/cgi-bin/config_fff+ these vars are filled

		func_log $FUNC daemon debug "coords known: $GPSX / $GPSY"

	else								# not filled? fetch them from NV-RAM
	
		GPSX="$( nvram get ff_adm_latlon | cut -d";" -f1 | sed 's/[^0-9\.]//g' )"
		GPSY="$( nvram get ff_adm_latlon | cut -d";" -f2 | sed 's/[^0-9\.]//g' )"

		func_log $FUNC daemon debug "coords from nvram: GPSX:'$GPSX' GPSY:'$GPSY'"
	fi
}

CITYFILE="/tmp/city_which_corresponds_to_gps_data.txt"

[ ! -e "$CITYFILE" ] && {

	[ -z "$FUNC_LOG" ] && {
		. /etc/functions_logging_fff+
		func_log include_logging daemon debug "included logging-functions"
	}
	
	fkt_get_city_by_gps >$CITYFILE

	func_log get_city_by_gps daemon debug "choosing properties for city '$( cat $CITYFILE )'"
}

. /etc/variables_$( cat $CITYFILE )_fff+


FFF_PLUS_VERSION="344340"	# 13Apr2009-14uhr42, SVN-000
FFF_VERSION="1.6.36"		# http://styx.commando.de/sven-ola/
