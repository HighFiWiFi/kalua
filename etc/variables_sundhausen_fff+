#!/bin/sh

# normal network settings
NAME="funknetz (normal)"
BSSID="02:ca:ff:ee:ba:be"
ESSID="sundi.freifunk.net"
CHANNEL="1"			# one of the four wifichannels 1...5...9...13 	(2.412 ... 2.432 ... 2.452 ... 2.472 GHz)
FBURST="off"

# pseudo-backbone-entry for using WAN-OLSR, which is by default off
NET1_NAME="funknetz (normal, OLSR auch auf WAN)"
NET1_BSSID="$BSSID"
NET1_ESSID="$ESSID"
NET1_CHANNEL="$CHANNEL"
NET1_FBURST="$FBURST"

# backbone1 network settings (e.g. easy longshots)
NET2_NAME="funknetz (Backbone - Kanal 13 = 2.472 GHz)"
NET2_BSSID="02:ca:ca:00:ba:be"
NET2_ESSID="weimar.freifunk.net_(backbone1)"
NET2_CHANNEL="13"
NET2_FBURST="on"

# backbone2 network settings (e.g. for fast 802.11a links with broadcom-miniPCI-cards)
NET3_NAME="funknetz (Backbone - Kanal 104 = 5.52 GHz)"
NET3_BSSID="02:be:ef:ca:ff:ee"
NET3_ESSID="weimar.freifunk.net_(backbone2)"
NET3_CHANNEL="136"				# for channel >14 the phytype=a is automatically selected
NET3_FBURST="on"

# backbone3 network setting (this is for building an AccessPoint which is connected via wired-OLSR to the mesh)
NET4_NAME="funknetz (AccessPoint)"
NET4_BSSID="02:be:ee:ee:ee:ef"
NET4_ESSID="subsignal"
NET4_CHANNEL="1"
NET4_FBURST="off"

# usermanagement
MAX_WIFI_TRAFFIC_REG="2500"	# values in megabytes per day
MAX_WIFI_TRAFFIC_UNR="2500"
MAX_WIRE_TRAFFIC_REG="2500"
MAX_WIRE_TRAFFIC_UNR="2500"
HAPPY_HOUR="0-6"		# starthour till endhour in 24h-format (no traffic-check during this time, counters reset @happyhour-end)

# ipkg-related entrys
REPOSITORY_ENTRY="src freifunk http://download.berlin.freifunk.net/ipkg/packages;src weimarnetz http://www.weimarnetz.de/ipkg/packages;src kamikaze-backports http://downloads.openwrt.org/backports/rc5;"
REPOSITORY_ENTRY="${REPOSITORY_ENTRY}src whiterussian http://downloads.openwrt.org/whiterussian/packages;src owfs http://owfs.sourceforge.net/openwrt/packages;"
REPOSITORY_ENTRY="${REPOSITORY_ENTRY}src laurence http://www.pug.org/~laurence/OpenWRT/whiterussian;src florian http://openwrt.alphacore.net"

# comfort-related functions
REGISTRATOR_WHITELIST_URL="http://www.weimarnetz.de/registrator/sundi/whitelist.php"	# list of IPs/MACs, which are allowed to be OLSR-nodes
URL_FIRMWARE_CURRENT="http://www.weimarnetz.de/freifunk/firmware/current.trx.bin"	# e.g.: if somebody has higher version count than I, fetch & burn this
URL_FIRMWARE_VERSION="http://www.weimarnetz.de/freifunk/firmware/version.txt"		# simple unixtime / 3600 = version
URL_FIRMWARE_TARBALL="http://www.weimarnetz.de/freifunk/firmware/current-tarball.tar"   # just all scripts

# files with status-info
