#!/bin/sh

. /etc/functions_base_fff+ && func_need log

STATUS="$1"	# add|old|del
MAC="$2"
IP="$3"
HOST="${4:-unknown}"

DEV="$( ip -oneline route get $IP | sed -n 's/^.* dev \([a-zA-Z0-9@\.]*\)[^a-z]*src .*/\1/p' )"

func_log dhcp_catch daemon info "arg1:'$1' arg2:'$2' arg3:'$3' arg4:'$4' dev:'$DEV'"
func_log dhcp_catch2 daemon info "DNSMASQ_CLIENT_ID: '$DNSMASQ_CLIENT_ID' DNSMASQ_VENDOR_CLASS: '$DNSMASQ_VENDOR_CLASS' DNSMASQ_INTERFACE: '$DNSMASQ_INTERFACE'"

