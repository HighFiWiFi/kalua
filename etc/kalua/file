_file_size ()	# if we have a busybox without 'stat'-command compiled
{		# ls is much faster, than a 'wc -c /path/to/10mb-file'

	ls -la "$1" 2>/dev/null | sed -n 's/^.* \([0-9]*\) .* [0-9]* .*[0-9]*.*[0-9]*:[0-9]*.*/\1/p' 2>/dev/null || {
		_log do file_size daemon crit "file '$1' does't exist"
		return 1
	}
}

_file_lines ()
{
	sed -n '$=' "$1" 2>/dev/null || echo "0"
}                
