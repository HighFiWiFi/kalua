_file_size ()	# if we have a busybox without 'stat'-command compiled
{		# ls is much faster, than a 'wc -c /path/to/10mb-file'
		# no error, if file does not exist!

	ls -la "$1" 2>/dev/null | sed -n 's/^.* \([0-9]*\) .* [0-9]* .*[0-9]*.*[0-9]*:[0-9]*.*/\1/p'
}

_file_lines ()
{
	sed -n '$=' "$1"
}                
