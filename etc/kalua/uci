_uci_get ()			# SENS: wrapper for firmware, that can work with either 'nvram' oder 'uci'-style
{				# USAGE: _uci get wl0_ssid SSID		// sets var 'SSID'
	local o="$1"		# $2 = VARNAME to set (this function cannot have vars)
	test ! -e /tmp/NVRAM	# using 'uci' if file is NOT there (means: defaulting to uci)

	case $? in
		0)
			uci get "$o" "$2"		# Unified Configuration Interface: http://nbd.name/gitweb.cgi?p=uci.git;a=summary
		;;
		*)
			case "$o" in
				vpn.intercity.enabled) o="fff_vpn_active" ;;
			esac

			case "$2" in
				"") nvram get "$o" ;;
				 *) eval "$2='$( nvram get "$o" )'"	# fixme! possible without forking?
			esac
		;;
	esac
}
