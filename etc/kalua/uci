_uci_get ()			# SENS: wrapper for firmware, that can work with either 'nvram' oder 'uci'-style
{				# USAGE: _uci get wl0_ssid SSID		// sets var 'SSID'
	local OPTION="$1"
	local VARIABLE="$2"

	test ! -e /tmp/NVRAM	# using 'uci' if file is NOT there (default)

	case $? in
		0)
			uci get "$OPTION" "$VARIABLE"
		;;
		*)
			case "$OPTION" in
				vpn.intercity.enabled) OPTION="fff_vpn_active"
			esac

			if [ -z "$VARIABLE" ]; then
				nvram get "$OPTION"
			else
				eval "$VARIABLE='$( nvram get "$OPTION" )'"
			fi
		;;
	esac
}

